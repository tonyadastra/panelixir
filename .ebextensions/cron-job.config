files:
  "/etc/cron.d/mycron":
    mode: "000644"
    owner: root
    group: root
    content: |
      30 10 * * * root /usr/local/bin/update_news.py
      55 03 * * * root /usr/local/bin/update_news.py
    "/usr/local/bin/update_news.py":
            mode: "000755"
            owner: root
            group: root
            content: |
                #!/bin/bash

                date > /tmp/date
                python update_news.py

                exit 0

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/mycron.bak"